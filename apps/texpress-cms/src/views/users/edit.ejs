<div class="card card-body border-0 shadow mb-4">
    <h2 class="h5 mb-4">Create a new user</h2>
    <form method="post" action="/users/<%= get(locals.data?.id) %>?_method=PUT">
        <div class="row">
            <div class="col-md-6 mb-3">
                <%- include('../common/input-field', { 
                    label: 'First Name', 
                    name: 'firstName', 
                    value: getEditFormData(locals.data, "firstName", locals.inputData) ?? "", 
                    placeholder: "Enter your first name",
                    errorMessage: getErrorMessage(locals.mappedErrors, 'firstName')
                }) %>
            </div>
            <div class="col-md-6 mb-3">
                <%- include('../common/input-field', { 
                    label: 'Last Name', 
                    name: 'lastName', 
                    placeholder: "Also your last name",
                    value: getEditFormData(locals.data, "lastName", locals.inputData) ?? "", 
                    errorMessage: getErrorMessage(locals.mappedErrors, 'firstName')
                }) %>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-6 mb-3">
                <label for="birthday">Birthday</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path
                                fill-rule="evenodd"
                                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                clip-rule="evenodd"
                            ></path>
                        </svg>
                    </span>
                    <input 
                        id="birthday" type="text" placeholder="yyyy/mm/dd" required 
                        value="<%= formatDate(getEditFormData(locals.data, "dob", locals.inputData) ?? "") %>"
                        class="form-control <%= getErrorMessage(locals.mappedErrors, 'dob') ? "is-invalid": "" %> datepicker" 
                        name="dob"
                        autocomplete="off"/>
                    <%- include('../common/invalid-feedback', {errorMessage: getErrorMessage(locals.mappedErrors, 'dob')}) %>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="gender">Gender</label>
                <select class="form-select mb-0 <%= getErrorMessage(locals.mappedErrors, 'gender') ? "is-invalid": "" %>" id="gender" aria-label="Gender select example" name="gender" required>
                    <option>Gender</option>
                    <option 
                        value="female" 
                        <%= getEditFormData(locals.data, "gender", locals.inputData) === 'female' ? 'selected': ''%> >Female</option>
                    <option 
                        value="male" 
                        <%= getEditFormData(locals.data, "gender", locals.inputData) === 'male' ? 'selected': '' %> >Male</option>
                </select>
                <%- include('../common/invalid-feedback', {errorMessage: getErrorMessage(locals.mappedErrors, 'gender')}) %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <%- include('../common/input-field', { 
                    label: 'Email', 
                    name: 'email', 
                    type: 'email',
                    value: getEditFormData(locals.data, "email", locals.inputData) ?? "", 
                    placeholder: "name@company.com",
                    errorMessage: getErrorMessage(locals.mappedErrors, 'email')
                }) %>
            </div>
            <div class="col-md-6 mb-3">
                <%- include('../common/input-field', { 
                    label: 'Mobile number', 
                    name: 'mobileNumber',  
                    type: 'number',
                    value: getEditFormData(locals.data, "mobileNumber", locals.inputData) ?? "", 
                    placeholder: "Mobile number",
                    errorMessage: getErrorMessage(locals.mappedErrors, 'mobileNumber'),
                }) %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <%- include('../common/input-field', { 
                    label: 'Password', 
                    name: 'password', 
                    type: 'password',
                    value: getEditFormData(locals.data, "password", locals.inputData) ?? "", 
                    placeholder: "name@company.com",
                    errorMessage: getErrorMessage(locals.mappedErrors, 'password')
                }) %>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">Update</button>
        </div>
    </form>
</div>