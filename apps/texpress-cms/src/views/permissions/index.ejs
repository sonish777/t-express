<div class="table-settings mb-4">
    <div class="row">
        <div class="col">
            <% if(hasPermission(locals.user, 'permissions:sync_permissions')) { %>
                <form action="/roles/sync-permissions" method="post">
                    <button type="submit" class="btn btn-sm btn-gray-800 d-inline-flex align-items-center mx-1">
                        Sync Permissions
                    </button>
                </form>
            <% } %>
        </div>
    </div>
</div>
<div class="card card-body">
    <div class="accordion" id="permission-accordion">
        <% exists(locals.data?.modulePermissions) && locals.data.modulePermissions.forEach((el, i) => { %>
            <%- include('partials/_table-row', {permission: el, sn: i+1, loggedInUser: locals.user}) %>
        <% }) %>
    </div>
</div>
