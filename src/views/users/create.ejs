<div class="card card-body border-0 shadow mb-4">
    <h2 class="h5 mb-4">Create a new user</h2>
    <form method="post" action="/users">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div>
                    <label for="first_name">First Name</label>
                    <input value="<%= getUserInput(locals.inputData, "firstName") ?? "" %>" class="form-control" id="first_name" type="text" placeholder="Enter your first name" required 
                    name="firstName"/>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div>
                    <label for="last_name">Last Name</label>
                    <input value="<%= getUserInput(locals.inputData, "lastName") ?? "" %>" class="form-control" id="last_name" type="text" placeholder="Also your last name" required 
                    name="lastName"/>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-6 mb-3">
                <label for="birthday">Birthday</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path
                                fill-rule="evenodd"
                                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                clip-rule="evenodd"
                            ></path>
                        </svg>
                    </span>
                    <input value="<%= getUserInput(locals.inputData, "dob") ?? "" %>" data-datepicker="" class="form-control" id="birthday" type="text" placeholder="dd/mm/yyyy" required 
                    name="dob"/>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="gender">Gender</label>
                <select class="form-select mb-0" id="gender" aria-label="Gender select example" name="gender">
                    <option>Gender</option>
                    <option 
                        value="female" 
                        <%= getUserInput(locals.inputData, "gender") === 'female' ? 'selected': ''%> >Female</option>
                    <option 
                        value="male" 
                        <%= getUserInput(locals.inputData, "gender") === 'male' ? 'selected': '' %> >Male</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input value="<%= getUserInput(locals.inputData, "email") ?? "" %>" class="form-control" id="email" type="email" placeholder="name@company.com" required name="email" />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label for="phone">Mobile number</label>
                    <input value="<%= getUserInput(locals.inputData, "mobileNumber") ?? "" %>" class="form-control" id="phone" type="number" placeholder="Mobile number" required name="mobileNumber" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="password">Password</label>
                <input value="<%= getUserInput(locals.inputData, "password") ?? "" %>" type="password" class="form-control" id="password" placeholder="Password" required name="password" />
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">Save all</button>
        </div>
    </form>
</div>
